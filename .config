# 目标设备（示例：x86_64软路由）
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_IMAGES_GENERIC_EXT4_EXT4=y

# 系统参数
CONFIG_HOSTNAME="OpenWrt"          # 主机名称
CONFIG_TARGET_ROOTFS_PARTSIZE=1024 # 根分区1GB（单位MB）
CONFIG_BRIDEG_NETFILTER=y          # IPv6支持依赖[1](@ref)
CONFIG_IPV6=y                      # 启用IPv6

# 启用LuCI和Nginx
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl-nginx=y    # Nginx作为Web服务器

# 指定主题Argon
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_LUCI_LANG_zh_Hans=y          # 中文语言包（可选）

# 后台地址与密码
CONFIG_TARGET_IPADDR="192.168.10.2" # 后台IP
CONFIG_TARGET_NETMASK="255.255.255.0" # 子网掩码
CONFIG_TARGET_PASSWORD="password"    # 登录密码

# 基础工具
CONFIG_PACKAGE_luci-app-store=y     # 应用商店
CONFIG_PACKAGE_luci-app-netspeedtest=y # 网速测试
# 网络监控
CONFIG_PACKAGE_luci-app-netdata=y   # 实时监控
CONFIG_PACKAGE_luci-app-nlbwmon=y   # 流量统计
# DNS与广告过滤
CONFIG_PACKAGE_luci-app-adguardhome=y # AdGuardHome
CONFIG_PACKAGE_luci-app-mosdns=y    # DNS分流
CONFIG_PACKAGE_luci-app-ddns-go=y   # 动态DNS
# 网络加速与负载均衡
CONFIG_PACKAGE_luci-app-turboacc=y  # 加速模块
CONFIG_PACKAGE_luci-app-mwan3=y     # 多线负载均衡[9](@ref)

# PassWall（全能代理）
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_ShadowsocksR_Libev=y
# OpenClash（规则驱动）
CONFIG_PACKAGE_luci-app-openclash=y
# Nikki（轻量级代理）
# 注：Nikki需手动添加仓库，非官方默认支持
